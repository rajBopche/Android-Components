<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.androidplayground">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="android.app.Application"
            android:allowBackup="false"
            android:icon="@mipmap/ic_place_holder"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_place_holder"
            android:supportsRtl="false"
            android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".AddUserActivity">
        </activity>
        <activity android:name=".feature.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".feature.users.UsersActivity"/>
        <activity android:name=".feature.users.DetailsActivity"/>
    </application>

</manifest>